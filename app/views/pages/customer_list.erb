<h1 align="center"><u>LIST OF ALL CUSTOMERS</u></h1>
<br>



	<table  class="table table-hover" style="font-size:10px">
    <thead  bgcolor="#008AB8">
      <tr>
        <th>Name</th>
        <th>Customer ID</th>
        <th>Mac address</th>
        <th>Ip address</th>
        <th>Connection type</th>
        <th>Status</th>
        <th>Billing code</th>
        <th>Contact no</th>
        <th>Contact person</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody style="font-size:10px">
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer %></td>
          <td><%= customer.customer_id %></td>
          <td><%= customer.mac_address %></td>
          <td><%= customer.ip_address %></td>
          <td><%= customer.connection_type %></td>
          <td><%= customer.status %></td>
          <td><%= customer.billing_code %></td>
          <td><%= customer.contact_no %></td>
          <td><%= customer.contact_person %></td>
          <td><%= customer.email %></td>
        </tr>
      </tbody>
      <%end%>
  </table>
  <%=will_paginate @customers, renderer: BootstrapPagination::Rails, previous_label: "Previous", next_label: "Next"%>